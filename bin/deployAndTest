#!/usr/bin/env bash
mv ./*.zip php-buildpack-offline.zip
BPDIR=$(cd $(dirname $0); cd ..; pwd)
TMPDIR=$BPDIR/tmp
TARGET=$BPDIR/target
mkdir $BPDIR/tmp
mkdir $TARGET
cd $TARGET
echo "{\"repositories\":[{\"packagist\":false}]}" > composer.json
touch index.php
$BPDIR/bin/detect
$BPDIR/bin/compile . $TMPDIR
$BPDIR/bin/release .
rm -Rf $TARGET
rm -Rf $TMPDIR