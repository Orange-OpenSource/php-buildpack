#!/usr/bin/env bash
ls -la /usr/bin/tar
ls -la /usr/bin/gzip
git submodule update --init
bin/package offline
mv ./*.zip php-buildpack-offline.zip
BPDIR=$(cd $(dirname $0); cd ..; pwd)
TMPDIR=$BPDIR/tmp
TARGET=$BPDIR/target
mkdir $BPDIR/tmp
mkdir $TARGET
mkdir $TARGET/.heroku
cd $TARGET
echo "{\"repositories\":[{\"packagist\":false}]}" > composer.json
touch index.php
$BPDIR/bin/detect
sudo $BPDIR/bin/compile . $TMPDIR
$BPDIR/bin/release .
rm -Rf $TARGET
rm -Rf $TMPDIR