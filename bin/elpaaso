#!/bin/sh

APP_DIR_TEMP=${APP_NAME}_APP_DIR
APP_DIR_TEMP=${!APP_DIR_TEMP}
chmod 755 -R $APP_DIR_TEMP

#change temp directory
TMPDIR_TEMP=${APP_NAME}_TMP_DIR
if [[ ! -z "${!TMPDIR_TEMP+x}" ]]; then
    mkdir -p ${!TMPDIR_TEMP}
    TMPDIR=${!TMPDIR_TEMP}
    chmod 766 -R ${!TMPDIR_TEMP}
    export TMPDIR
fi

LOGS_DIR_TEMP=${APP_NAME}_LOGS_DIR
if [[ ! -z "${!LOGS_DIR_TEMP+x}" ]]; then
    mkdir -p ${!LOGS_DIR_TEMP}
    chmod 766 -R ${!LOGS_DIR_TEMP}
fi
